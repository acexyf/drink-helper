{
  "name": "Drink Helper",
  "description": "喝水小助手",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["storage", "declarativeContent", "alarms", "notifications"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "popup.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
