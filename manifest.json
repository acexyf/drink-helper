{
  "name": "Drink Helper",
  "description": "喝水小助手",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["storage", "declarativeContent", "alarms", "notifications"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/png16.png",
      "24": "icons/png24.png",
      "32": "icons/png32.png",
      "48": "icons/png48.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
